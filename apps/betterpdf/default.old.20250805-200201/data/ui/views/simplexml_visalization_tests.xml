<dashboard version="1.1">
  <label>SimpleXML visualization tests</label>
  <description>Some dashboard panels to test different features</description>
  <row>
    <panel>
      <viz type="betterpdf.betterpdf">
        <title>Test gauge vis with invalid data (decent error text)</title>
        <search>
          <done>
            <set token="jobSID">$job.sid$</set>
          </done>
          <query>| inputlookup browser_usage_pct_2009_2023.csv |  table Year,*</query>
          <earliest>-15m</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="betterpdf.betterpdf.charttype">&amp;chart=gauge&amp;subtype=none</option>
        <option name="drilldown">none</option>
        <option name="height">424</option>
        <option name="refresh.display">progressbar</option>
      </viz>
      <viz type="betterpdf.betterpdf">
        <title>Test svg base64 output</title>
        <search>
          <done>
            <set token="jobSID">$job.sid$</set>
          </done>
          <query>index=* OR index=_* | top index</query>
          <earliest>-15m</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="betterpdf.betterpdf.charttype">&amp;chart=gauge&amp;subtype=half</option>
        <option name="drilldown">none</option>
        <option name="height">424</option>
        <option name="refresh.display">progressbar</option>
      </viz>
    </panel>
    <panel>
      <viz type="betterpdf.betterpdf">
        <title>Test pdf base64 output</title>
        <search>
          <query>| inputlookup betterpdf_examples_columnchart.csv 
| table Year,*
| append [| inputlookup seat_booking.csv]</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="betterpdf.betterpdf.charttype">&amp;table=true</option>
        <option name="drilldown">none</option>
        <option name="height">909</option>
        <option name="refresh.display">progressbar</option>
      </viz>
    </panel>
  </row>
</dashboard>