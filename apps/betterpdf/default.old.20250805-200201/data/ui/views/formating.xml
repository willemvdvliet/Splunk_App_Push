<!-- font stuff -->
<label for="font" id="fontlabel">Choose a font:</label>
<select name="font" id="font">
<option value="Courier">Courier (fixed-width)</option>
<option value="Arial">Helvetica or Arial (synonymous; sans serif)</option>
<option value="Times">Times (serif)</option>
<option value="Symbol">Symbol (symbolic)</option>
<option value="ZapfDingbats">ZapfDingbats (symbolic)</option>
</select>
<label for="fontsize" id="fontsizelabel">Size:</label>
<input type="text" id="fontsize" pattern="^[0-9\.]*$" title="Fontsize in point, . for decimal values"/>

