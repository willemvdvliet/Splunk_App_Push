<!-- above pageview -->
<div id="settings" style="width: 800px;height: 600px;">
<!-- <img src="$page|n$" id="page"/> -->
<label for="margins_top" style="left: 150px;top: 115px;position: absolute;visibility: hidden;" id="margins_top_label">inches</label>
<input type="text" id="margins_top" pattern="^[0-9\.]*$" title="Margin in inch, . for decimal values"/>
<input type="text" id="margins_bottom" pattern="^[0-9\.]*$" title="Margin in inch, . for decimal values"/>
<input type="text" id="margins_left" pattern="^[0-9\.]*$" title="Margin in inch, . for decimal values"/>
<input type="text" id="margins_right" pattern="^[0-9\.]*$" title="Margin in inch, . for decimal values"/>
          
<label for="paper">Choose a paper size:</label>
<select name="paper" id="paper">
<option value="letter">Letter (8 1/2 x 11 in)</option>
<option value="legal">Legal (8 1/2 x 14 in)</option>
<option value="a3">A3 (297 x 420 mm)</option>
<option value="a4">A4 (210 x 297 mm)</option>
<option value="a5">A5 (148 x 210 mm)</option>
</select>

<label for="paper" style="     left: 240px;     top: 10px;     position: absolute; ">Page orientation:</label>

<select name="orientation" id="orientation" style="     top: 34px;     left: 240px;     position: absolute; ">
<option value="portrait">portrait</option>
<option value="landscape">landscape</option>
</select>

<!-- overlay pageview -->
<br/><img src="" id="currentlogo" width="250" height="150" style="left: 60px;top: 150px;position: absolute;" title="Click to upload a custom logo." onclick="upload_logo()"></img>

